<Window x:Class="VRTRAKILL.UIManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRTRAKILL.UIManager.View"
        mc:Ignorable="d"
        Title="VRTRAKILL Launcher"
        Height="360" Width="640"
        ResizeMode="NoResize">
    
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="HI"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="64"/>

        <Frame Grid.Row="0" Source="null"/>

        <!-- Bottom panel -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button Content="INSTALL/UPDATE"/>
            <Button Content="HELP"/>
            <Button Content="RUN ULTRAKILL"/>
            <CheckBox Content="IN VR"/>
        </StackPanel>
    </Grid>
</Window>
